#! /usr/bin/env ruby
# -*- encoding: utf-8 -*-

if ARGV.count != 2
  puts %{
    usage: template template-name file-name
    example: template ruby test.rb
  }
  exit
end

TemplatePath = "~/freeman/templates"
files = `ls #{TemplatePath}`.split

pattern = Regexp.escape(ARGV[0])
template = files.find{|x| x =~ /#{pattern}/}
`cp #{TemplatePath}/#{template} #{ARGV[1]}`
